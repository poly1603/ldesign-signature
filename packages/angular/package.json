{
  "name": "@ldesign/signature-angular",
  "version": "1.0.0",
  "description": "Angular components and directives for signature pad",
  "keywords": [
    "signature",
    "angular",
    "angular-component",
    "canvas",
    "drawing"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    }
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "es",
    "lib",
    "dist"
  ],
  "scripts": {
    "dev": "ng-packagr -p ng-package.json -w",
    "build": "ng-packagr -p ng-package.json",
    "clean": "rimraf es lib dist",
    "test": "vitest run",
    "demo": "cd examples && pnpm dev",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "tslib": "^2.6.0"
  },
  "peerDependencies": {
    "@angular/core": ">=16.0.0",
    "@angular/common": ">=16.0.0",
    "@ldesign/signature-core": "*",
    "rxjs": ">=7.0.0"
  },
  "devDependencies": {
    "@angular/core": "^18.0.0",
    "@angular/common": "^18.0.0",
    "@ldesign/signature-core": "workspace:*",
    "unbuild": "^2.0.0",
    "@antfu/eslint-config": "^3.0.0",
    "eslint": "^9.0.0",
    "ng-packagr": "^18.0.0",
    "rxjs": "^7.8.0",
    "typescript": "~5.5.4",
    "vitest": "^2.0.0",
    "rimraf": "^5.0.5"
  }
}
