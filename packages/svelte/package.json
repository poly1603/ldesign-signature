{
  "name": "@ldesign/signature-svelte",
  "version": "1.0.0",
  "description": "Svelte components and stores for signature pad",
  "keywords": [
    "signature",
    "svelte",
    "svelte-component",
    "canvas",
    "drawing"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js"
    }
  },
  "svelte": "./dist/index.js",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "svelte-package",
    "package": "svelte-package",
    "clean": "rimraf es lib dist package",
    "test": "vitest run",
    "demo": "cd examples && pnpm dev",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@ldesign/signature-core": "workspace:*"
  },
  "peerDependencies": {
    "svelte": "^4.0.0 || ^5.0.0"
  },
  "devDependencies": {
    "unbuild": "^2.0.0",
    "@antfu/eslint-config": "^3.0.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "eslint": "^9.0.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.7.3",
    "vite": "^6.0.0",
    "vitest": "^2.0.0",
    "rimraf": "^5.0.5"
  }
