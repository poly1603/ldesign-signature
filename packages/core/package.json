{
  "name": "@ldesign/signature-core",
  "version": "0.2.0",
  "description": "Core engine for signature pad - canvas drawing, touch support, pressure sensitivity",
  "keywords": [
    "ldesign",
    "signature",
    "canvas",
    "drawing",
    "handwriting",
    "signature-pad",
    "touch",
    "pressure-sensitive",
    "catmull-rom"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "unpkg": "./dist/index.min.js",
  "jsdelivr": "./dist/index.min.js",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "dist"
  ],
  "scripts": {
    "dev": "unbuild --watch",
    "build": "unbuild",
    "clean": "rimraf es lib dist",
    "test": "vitest run",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "unbuild": "^2.0.0",
    "typescript": "^5.7.3",
    "vitest": "^2.0.0",
    "jsdom": "^25.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "rimraf": "^5.0.5"
  }
}

