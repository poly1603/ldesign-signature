{
  "name": "@ldesign/signature-vue",
  "version": "0.2.0",
  "description": "Vue 3 components for signature pad",
  "keywords": [
    "signature",
    "vue",
    "vue3",
    "vue-component",
    "canvas",
    "drawing"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    },
    "./components": {
      "types": "./es/components/index.d.ts",
      "import": "./es/components/index.js",
      "require": "./lib/components/index.cjs"
    },
    "./composables": {
      "types": "./es/composables/index.d.ts",
      "import": "./es/composables/index.js",
      "require": "./lib/composables/index.cjs"
    }
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "unpkg": "./dist/index.min.js",
  "jsdelivr": "./dist/index.min.js",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "es",
    "lib",
    "dist"
  ],
  "scripts": {
    "dev": "ldesign-builder build --watch",
    "build": "ldesign-builder build",
    "clean": "rimraf es lib dist",
    "test": "vitest run",
    "demo": "cd examples && pnpm dev",
    "type-check": "vue-tsc --noEmit"
  },
  "dependencies": {
    "@ldesign/signature-core": "workspace:*",
    "@vueuse/core": "^10.7.0"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vue/compiler-sfc": "^3.3.0",
    "typescript": "^5.7.3",
    "vitest": "^1.2.1",
    "vue-tsc": "^1.8.0",
    "rimraf": "^5.0.5"
  }
}

