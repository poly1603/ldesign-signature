{
  "name": "@ldesign/signature-vue",
  "version": "0.2.0",
  "description": "Vue 3 components for signature pad",
  "keywords": [
    "signature",
    "vue",
    "vue3",
    "vue-component",
    "canvas",
    "drawing"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "unpkg": "./dist/index.min.js",
  "jsdelivr": "./dist/index.min.js",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build -c vite.config.ts && vue-tsc -p tsconfig.json --declaration --emitDeclarationOnly --outDir dist",
    "clean": "rimraf es lib dist",
    "test": "vitest run",
    "demo": "cd examples && pnpm dev",
    "type-check": "vue-tsc --noEmit"
  },
  "dependencies": {
    "@ldesign/signature-core": "workspace:*",
    "@vueuse/core": "^10.7.0"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "vite": "^5.4.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/compiler-sfc": "^3.5.0",
    "typescript": "^5.7.3",
    "vitest": "^2.0.0",
    "vue-tsc": "^2.0.0",
    "rimraf": "^5.0.5"
  }
}

