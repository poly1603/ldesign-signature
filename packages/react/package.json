{
  "name": "@ldesign/signature-react",
  "version": "0.2.0",
  "description": "React components for signature pad",
  "keywords": [
    "signature",
    "react",
    "react-component",
    "canvas",
    "drawing"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    },
    "./components/*": {
      "types": "./es/components/*.d.ts",
      "import": "./es/components/*.js",
      "require": "./lib/components/*.cjs"
    },
    "./hooks/*": {
      "types": "./es/hooks/*.d.ts",
      "import": "./es/hooks/*.js",
      "require": "./lib/hooks/*.cjs"
    }
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "unpkg": "./dist/index.min.js",
  "jsdelivr": "./dist/index.min.js",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "es",
    "lib",
    "dist"
  ],
  "scripts": {
    "dev": "ldesign-builder build --watch",
    "build": "ldesign-builder build",
    "clean": "rimraf es lib dist",
    "test": "vitest run",
    "demo": "cd examples && pnpm dev",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@ldesign/signature-core": "workspace:*",
    "classnames": "^2.3.2"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "typescript": "^5.7.3",
    "vitest": "^1.2.1",
    "rimraf": "^5.0.5"
  }
}

