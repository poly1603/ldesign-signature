{
  "name": "@ldesign/signature-lit",
  "version": "0.2.0",
  "description": "Lit Web Components for signature pad",
  "keywords": [
    "signature",
    "web-components",
    "lit",
    "lit-element",
    "canvas",
    "drawing"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "unpkg": "./dist/index.min.js",
  "jsdelivr": "./dist/index.min.js",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "dist"
  ],
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "clean": "rimraf es lib dist",
    "test": "vitest run",
    "demo": "cd examples && pnpm dev",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@ldesign/signature-core": "workspace:*",
    "lit": "^3.0.0",
    "@lit/reactive-element": "^2.0.0",
    "lit-html": "^3.0.0"
  },
  "devDependencies": {
    "unbuild": "^2.0.0",
    "typescript": "^5.7.3",
    "vitest": "^2.0.0",
    "rimraf": "^5.0.5"
  }
}

