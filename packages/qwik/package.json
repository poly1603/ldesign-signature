{
  "name": "@ldesign/signature-qwik",
  "version": "1.0.0",
  "description": "Qwik components with resumability for signature pad",
  "keywords": [
    "signature",
    "qwik",
    "qwik-component",
    "canvas",
    "drawing"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "dist"
  ],
  "scripts": {
    "dev": "unbuild --watch",
    "build": "unbuild",
    "clean": "rimraf es lib dist",
    "test": "vitest run",
    "demo": "cd examples && pnpm dev",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@ldesign/signature-core": "workspace:*"
  },
  "peerDependencies": {
    "@builder.io/qwik": "^1.10.0"
  },
  "devDependencies": {
    "@builder.io/qwik": "^1.10.0",
    "unbuild": "^2.0.0",
    "@antfu/eslint-config": "^3.0.0",
    "eslint": "^9.0.0",
    "typescript": "^5.7.3",
    "vitest": "^2.0.0",
    "rimraf": "^5.0.5"
  }
}
