{
  "name": "@ldesign/signature",
  "version": "0.2.0",
  "description": "功能强大的手写签名组件 - Canvas 绘图、触摸支持、压力感应、Catmull-Rom 平滑、导出多格式",
  "keywords": [
    "ldesign",
    "signature",
    "canvas",
    "drawing",
    "handwriting",
    "signature-pad",
    "touch",
    "pressure-sensitive",
    "apple-pencil",
    "smooth",
    "catmull-rom",
    "vue",
    "react"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "type": "module",
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "exports": {
    ".": {
      "import": "./es/index.js",
      "require": "./lib/index.cjs",
      "types": "./es/index.d.ts"
    },
    "./vue": {
      "import": "./es/adapters/vue/index.js",
      "types": "./es/adapters/vue/index.d.ts"
    },
    "./react": {
      "import": "./es/adapters/react/index.js",
      "types": "./es/adapters/react/index.d.ts"
    },
    "./lit": {
      "import": "./es/adapters/lit/index.js",
      "types": "./es/adapters/lit/index.d.ts"
    }
  },
  "files": [
    "es",
    "lib",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm -r --filter './packages/*' run build",
    "build:core": "pnpm --filter '@ldesign/signature-core' run build",
    "dev": "pnpm -r --parallel --filter './packages/*' run dev",
    "clean": "pnpm -r --filter './packages/*' run clean",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "pnpm -r --filter './packages/*' run type-check",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "peerDependencies": {
    "vue": ">=3.0.0",
    "react": ">=16.8.0",
    "lit": ">=2.0.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "lit": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/ui": "^2.0.0",
    "eslint": "^9.0.0",
    "lit": "^3.0.0",
    "typescript": "^5.7.3",
    "unbuild": "^2.0.0",
    "vitepress": "^1.0.0",
    "vitest": "^2.0.0",
    "vue": "^3.0.0"
  }
}






